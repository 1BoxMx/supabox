<?xml version="1.0" encoding="UTF-8"?>
<addon id="script.module.watchhistory"
       name="Watch History Module and Service"
       version="1.0.1.2"
       provider-name="the-one">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.t0mm0.common" version="0.0.1"/>
  </requires>
  <extension library="default.py" point="xbmc.service"  start="startup"/>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Save and load watched items for third-party addons in XBMC.</summary>
    <description lang="en">Save and load watched items for third-party addons in XBMC, simplify addon development of video plugins requiring to keep track of watched items.</description>
    <platform>all</platform>
  </extension>
</addon>
