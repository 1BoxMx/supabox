<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.xunitymod"
  version="1.0.2"
  name="Xunity - Confluence Mod"
  provider-name="Xunity Team, Voinage, Additions to the hard work of Jezz_X, Team XBMC">
  <requires>
    <import addon="xbmc.gui" version="4.0.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Xunity a Confluence skin Mod, adding to the original Confluence skin by Jezz_X. (XBMC's default skin)</summary>
    <description lang="en">A modified skin relying upon Confluence which is the default skin for XBMC 9.11 and above. It is a combination of concepts from many popular skins, and attempts to embrace and integrate their good ideas into a skin that should be easy for first time XBMC users to understand and use.</description>
    <disclaimer lang="en">Confluence is the default skin for XBMC - Xunity is not, removing Original Confluence may cause issues</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
