<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
    <addon id="plugin.program.addoninstaller" version="1.1.7" name="Addon Installer" provider-name="xbmchub.com, Blazetamer">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.addon.common" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Addon Browser</summary>
        <description>Its like an App Store for XBMC Addons, and everything is free! Please visit www.xbmchub.com for support.  </description>
        <forum>http://www.xbmchub.com/forums/addon-browser/</forum>
        <website>http://www.xbmchub.com/</website>
        <platform>all</platform>
    </extension>
</addon>